datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  email       String?  @unique
  displayName String
  spotifyId   String   @unique
  createdAt   DateTime @default(now())
}

type Preferences {
  newsletter Boolean
}

model Account {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  spotifyId   String      @unique
  preferences Preferences
}
